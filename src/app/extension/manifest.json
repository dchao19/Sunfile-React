{
  "manifest_version": 2,
  "name": "SunFile",
  "description": "A small extemp utiliy that downloads an article in a word document format with publication names and dates.",
  "version": "1.0.4",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "<all_urls>",
    "downloads",
    "storage",
    "cookies"
  ],
  "icons": {
     "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png" 
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"

}